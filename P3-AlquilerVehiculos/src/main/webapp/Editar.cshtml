@model AlquilerVehiculoP2.Models.ViewModels.AutoViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<!--Raquel-->
@using (Html.BeginForm("Editar", "Auto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
