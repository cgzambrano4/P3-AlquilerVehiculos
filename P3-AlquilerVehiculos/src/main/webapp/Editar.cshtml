            <div class="col-sm-12">
                <label>Iamgen de Vehículo</label><br />
                <input type="file" name="file" value="" />
            </div>
        </div>

        <div class="mt-3">
            <input value="Actualizar" class="btn btn-outline-dark" type="submit" />
            <a href="~/Auto/Index" class="btn btn-outline-dark">Cancelar</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
